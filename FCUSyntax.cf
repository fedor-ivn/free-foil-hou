comment "--" ;

-- Identifiers
token Id (lower (lower | digit)*) ;     -- Any number of lowercase letters or digits
token MetavarId (upper (upper | digit)*) ;     -- Any number of uppercase letters or digits
token ConstructorId (upper lower*) ;         -- Uppercase letter followed by lowercase letters

-- Terms in your Haskell representation
WTerm.    Term ::= MetavarId ;
OTerm.    Term ::= Id ;
CTerm. Term ::= ConstructorId ;
AppTerm.    Term ::= Term Term ;
AbsTerm.    Term ::= "Î»" Pattern "." ScopedTerm ;
PairTerm.    Term ::= "(" Term "," Term ")" ;
FstTerm.    Term ::= "fst" Term ;
SndTerm.    Term ::= "snd" Term ;

PatternVar. Pattern ::= Id ;

ScopedTerm. ScopedTerm ::= Term ;

-- Parentheses for grouping terms
_.           Term ::= "(" Term ")" ;
